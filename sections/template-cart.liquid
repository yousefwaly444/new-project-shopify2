{% if section.settings.recommendations_collection != blank %}
  {% assign rec_collection = section.settings.recommendations_collection %}
{% else %}
  {% assign rec_collection = collections.frontpage %}
{% endif %}

<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12">
  <h1 class="text-2xl md:text-3xl font-bold text-gray-900 mb-8">Your cart</h1>

  {% if cart.item_count == 0 %}
    <div class="bg-white rounded-3xl border border-gray-200 shadow-sm px-12 pt-12 pb-8 md:px-16 md:pt-16 md:pb-10 text-center">
      <p class="text-2xl font-bold text-gray-900 mb-3">Your cart is empty</p>
      <p class="text-gray-500 mb-8 max-w-md mx-auto">Add products to your cart to see them here.</p>
      <a href="{{ routes.root_url }}" class="inline-block mb-2 px-8 py-4 bg-black text-white font-semibold rounded-xl hover:bg-gray-800">Continue shopping</a>
    </div>
  {% else %}
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 lg:gap-12">
      <!-- Left column: Cart items + Recommendations -->
      <div class="lg:col-span-2 space-y-8">
        <!-- Cart items -->
        <div class="bg-white rounded-3xl border border-gray-200 shadow-sm overflow-hidden">
          <form action="{{ routes.cart_url }}" method="post" id="cart-form">
            <ul class="divide-y divide-gray-200">
              {% for item in cart.items %}
                <li class="p-4 md:p-6 flex flex-col sm:flex-row gap-4">
                  <a href="{{ item.url }}" class="shrink-0 w-full sm:w-28 h-28 rounded-xl overflow-hidden bg-gray-100">
                    {% if item.image %}
                      <img src="{{ item.image | image_url: width: 224, height: 224 }}" alt="{{ item.title | escape }}" width="112" height="112" class="w-full h-full object-cover">
                    {% else %}
                      {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
                    {% endif %}
                  </a>
                  <div class="flex-1 min-w-0 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                    <div>
                      <div class="flex items-start justify-between gap-2">
                        <a href="{{ item.url }}" class="font-semibold text-gray-900 hover:text-gray-600">{{ item.product.title }}</a>
                        <a href="{{ routes.cart_change_url }}?line={{ forloop.index }}&quantity=0" class="text-red-500 hover:text-red-600 shrink-0" aria-label="Remove">&#10005;</a>
                      </div>
                      {% if item.variant.title != 'Default Title' %}
                        <p class="text-sm text-gray-500 mt-0.5">{{ item.variant.title }}</p>
                      {% endif %}
                      <div class="flex items-center gap-2 mt-2">
                        {% if item.original_line_price > item.final_line_price %}
                          <span class="text-gray-400 line-through text-sm">{{ item.original_price | money }}</span>
                        {% endif %}
                        <span class="font-semibold text-gray-900">{{ item.final_price | money }}</span>
                      </div>
                    </div>
                    <div class="flex items-center gap-4">
                      <div class="flex items-center border border-gray-300 rounded-lg overflow-hidden">
                        <label for="qty-{{ forloop.index }}" class="sr-only">Quantity</label>
                        <button type="button" class="cart-qty-minus px-3 py-2 text-gray-600 hover:bg-gray-100" data-line="{{ forloop.index }}" data-current="{{ item.quantity }}" aria-label="Decrease">−</button>
                        <input type="number" name="updates[]" id="qty-{{ forloop.index }}" value="{{ item.quantity }}" min="0" class="cart-qty-input w-12 text-center border-0 border-x border-gray-300 py-2 text-sm font-medium">
                        <button type="button" class="cart-qty-plus px-3 py-2 text-gray-600 hover:bg-gray-100" data-line="{{ forloop.index }}" data-current="{{ item.quantity }}" aria-label="Increase">+</button>
                      </div>
                      <span class="font-semibold text-gray-900 whitespace-nowrap">Total: {{ item.final_line_price | money }}</span>
                    </div>
                  </div>
                </li>
              {% endfor %}
            </ul>
            <div class="p-4 md:p-6 border-t border-gray-200">
              <button type="submit" name="update" class="px-4 py-2 text-sm font-medium text-gray-700 border border-gray-300 rounded-lg hover:bg-gray-50">Update cart</button>
            </div>
          </form>
        </div>

        <!-- Recommended products -->
        {% if rec_collection.products.size > 0 %}
          <div class="bg-white rounded-2xl border border-gray-200 shadow-sm overflow-hidden p-6">
            <h2 class="text-lg font-bold text-gray-900 mb-6">Great choices before completing your order</h2>
            <div class="grid grid-cols-2 gap-4">
              {% for product in rec_collection.products limit: 4 %}
                <div class="border border-gray-200 rounded-xl overflow-hidden flex flex-col">
                  <a href="{{ product.url }}" class="block aspect-square bg-gray-100">
                    {% if product.featured_image %}
                      <img src="{{ product.featured_image | image_url: width: 400, height: 400 }}" alt="{{ product.featured_image.alt | escape }}" width="200" height="200" class="w-full h-full object-cover">
                    {% else %}
                      {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
                    {% endif %}
                  </a>
                  <div class="p-3 flex-1 flex flex-col">
                    <a href="{{ product.url }}" class="font-medium text-gray-900 text-sm line-clamp-2 hover:text-gray-600">{{ product.title }}</a>
                    <div class="flex items-center gap-2 mt-1 flex-wrap">
                      {% if product.compare_at_price > product.price %}
                        <span class="text-gray-400 line-through text-xs">{{ product.compare_at_price | money }}</span>
                      {% endif %}
                      <span class="font-semibold text-gray-900">{{ product.price | money }}</span>
                    </div>
                    {% if product.available %}
                      <button type="button" class="add-to-cart-btn mt-2 w-full py-2 bg-black text-white text-sm font-semibold rounded-lg hover:bg-gray-800" data-variant-id="{{ product.selected_or_first_available_variant.id }}">Add to cart</button>
                    {% else %}
                      <button disabled class="mt-2 w-full py-2 bg-gray-300 text-gray-500 text-sm rounded-lg cursor-not-allowed">Sold out</button>
                    {% endif %}
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
        {% endif %}
      </div>

      <!-- Right column: Order summary (sticky on desktop) -->
      <div class="lg:col-span-1">
        <div class="bg-white rounded-2xl border border-gray-200 shadow-sm p-6 lg:sticky lg:top-24">
          <h2 class="text-lg font-bold text-gray-900 mb-6">Order Summary</h2>
          <dl class="space-y-3 text-sm">
            <div class="flex justify-between">
              <dt class="text-gray-600">Total items amount</dt>
              <dd class="font-semibold text-gray-900">{{ cart.total_price | money }}</dd>
            </div>
          </dl>
          <div class="mt-6 pt-4 border-t border-gray-200">
            <p class="text-sm text-gray-600 mb-2">Do you have a promo code?</p>
            <div class="flex gap-2">
              <input type="text" placeholder="Apply Coupon" class="flex-1 px-3 py-2 border border-gray-300 rounded-lg text-sm" disabled aria-label="Coupon code (applied at checkout)">
              <button type="button" class="px-4 py-2 bg-black text-white text-sm font-medium rounded-lg hover:bg-gray-800" disabled>Apply</button>
            </div>
            <p class="text-xs text-gray-400 mt-1">Discount codes can be applied at checkout.</p>
          </div>
          <dl class="mt-6 pt-4 border-t border-gray-200">
            <div class="flex justify-between items-center">
              <dt class="font-semibold text-gray-900">Final total amount</dt>
              <dd class="text-xl font-bold text-gray-900">{{ cart.total_price | money }}</dd>
            </div>
          </dl>
          <form action="{{ routes.cart_url }}" method="post" class="mt-6">
            <button type="submit" name="checkout" class="w-full py-4 bg-black text-white font-bold rounded-xl hover:bg-gray-800">Submit order</button>
          </form>
          <a href="{{ routes.all_products_collection_url }}" class="block mt-4 text-center text-sm text-gray-600 hover:underline">Continue shopping</a>
        </div>
      </div>
    </div>
  {% endif %}
</div>

<script>
document.querySelectorAll('.cart-qty-minus').forEach(function(btn) {
  btn.addEventListener('click', function() {
    var input = document.getElementById('qty-' + this.dataset.line);
    var val = parseInt(input.value, 10) || 0;
    if (val > 0) input.value = val - 1;
  });
});
document.querySelectorAll('.cart-qty-plus').forEach(function(btn) {
  btn.addEventListener('click', function() {
    var input = document.getElementById('qty-' + this.dataset.line);
    var val = parseInt(input.value, 10) || 0;
    input.value = val + 1;
  });
});
</script>

{% schema %}
{
  "name": "Template Cart",
  "settings": [
    {
      "type": "collection",
      "id": "recommendations_collection",
      "label": "Recommendations collection",
      "info": "Products shown in “Great choices before completing your order”. Leave blank to use the frontpage collection."
    }
  ]
}
{% endschema %}
