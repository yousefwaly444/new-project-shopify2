{% comment %}
  Cart is shown only in the drawer (cart icon). This template redirects /cart to home and opens the drawer.
{% endcomment %}
<div class="min-h-[40vh] flex items-center justify-center px-4">
  <div class="text-center">
    <p class="text-gray-600 mb-4">Opening your cart...</p>
    <a href="{{ routes.root_url }}" class="text-gray-900 font-medium underline">Continue to shop</a>
  </div>
</div>
<script>
  window.location.replace(window.location.origin + '/?open_cart=1');
</script>

{% schema %}
{
  "name": "Template Cart",
  "settings": []
}
{% endschema %}
