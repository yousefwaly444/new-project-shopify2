<style>
  .search-page { max-width: 560px; margin: 0 auto; padding: 24px 16px 48px; }
  .search-bar-form { display: flex; gap: 0; border: 1.5px solid #d1d5db; border-radius: 12px; overflow: hidden; background: #fff; box-shadow: 0 2px 8px rgba(0,0,0,0.07); }
  .search-bar-form:focus-within { border-color: #111; box-shadow: 0 0 0 2px rgba(17,17,17,0.2); }
  .search-bar-input { flex: 1; padding: 14px 18px; border: none; font-size: 16px; color: #111; background: transparent; outline: none; }
  .search-bar-input::placeholder { color: #9ca3af; }
  .search-bar-submit { padding: 14px 24px; background: #111; color: #fff; font-size: 15px; font-weight: 600; border: none; cursor: pointer; transition: background 0.15s; }
  .search-bar-submit:hover { background: #333; }
  .search-results-count { font-size: 14px; color: #6b7280; margin-bottom: 20px; }
  .search-results-list { display: flex; flex-direction: column; gap: 16px; }
  .search-result-card { display: flex; gap: 16px; padding: 18px; background: #fff; border-radius: 18px; border: 1px solid #ebebeb; box-shadow: 0 2px 8px rgba(0,0,0,0.07); text-decoration: none; color: inherit; transition: box-shadow 0.15s; }
  .search-result-card:hover { box-shadow: 0 4px 14px rgba(0,0,0,0.09); }
  .search-result-card__img { width: 88px; height: 88px; border-radius: 12px; overflow: hidden; flex-shrink: 0; background: #f5f5f5; }
  .search-result-card__img img { width: 100%; height: 100%; object-fit: cover; }
  .search-result-card__body { flex: 1; min-width: 0; }
  .search-result-card__title { font-size: 15px; font-weight: 600; color: #111; line-height: 1.4; margin-bottom: 4px; }
  .search-result-card__price { font-size: 15px; font-weight: 700; color: #111; }
  .search-result-card__excerpt { font-size: 13px; color: #6b7280; line-height: 1.5; margin-top: 6px; }
  .search-empty { text-align: center; padding: 60px 24px; background: #fff; border-radius: 18px; border: 1px solid #ebebeb; }
  .search-empty__title { font-size: 18px; font-weight: 700; color: #111; margin-bottom: 8px; }
  .search-empty__text { font-size: 15px; color: #6b7280; }
  .search-pagination { margin-top: 24px; }
</style>

<div class="search-page">
  <form action="{{ routes.search_url }}" method="get" role="search" class="search-bar-form">
    <input
      type="search"
      name="q"
      value="{{ search.terms | escape }}"
      placeholder="Search productsâ€¦"
      class="search-bar-input"
      aria-label="Search"
    >
    <button type="submit" class="search-bar-submit">Search</button>
  </form>

  {% if search.performed %}
    <p class="search-results-count">
      {% if search.results_count == 0 %}
        No results for "{{ search.terms | escape }}"
      {% else %}
        {{ search.results_count }} result{% if search.results_count != 1 %}s{% endif %} for "{{ search.terms | escape }}"
      {% endif %}
    </p>

    {% if search.results_count > 0 %}
      {% paginate search.results by 10 %}
        <div class="search-results-list">
          {% for item in search.results %}
            <a href="{{ item.url }}" class="search-result-card">
              <div class="search-result-card__img">
                {% if item.featured_image %}
                  <img
                    src="{{ item.featured_image | image_url: width: 176, height: 176 }}"
                    alt="{{ item.featured_image.alt | default: item.title | escape }}"
                    width="88"
                    height="88"
                    loading="lazy"
                  >
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
                {% endif %}
              </div>
              <div class="search-result-card__body">
                <div class="search-result-card__title">{{ item.title }}</div>
                {% if item.object_type == 'product' %}
                  <div class="search-result-card__price">{{ item.price | money }}</div>
                {% endif %}
                {% if item.content != blank %}
                  <div class="search-result-card__excerpt">{{ item.content | strip_html | truncatewords: 25 }}</div>
                {% endif %}
              </div>
            </a>
          {% endfor %}
        </div>

        {% if paginate.pages > 1 %}
          <div class="search-pagination">
            {{ paginate | default_pagination }}
          </div>
        {% endif %}
      {% endpaginate %}
    {% else %}
      <div class="search-empty">
        <p class="search-empty__title">No results found</p>
        <p class="search-empty__text">Try different keywords or check your spelling.</p>
      </div>
    {% endif %}
  {% endif %}
</div>

{% schema %}
{
  "name": "Template Search",
  "settings": []
}
{% endschema %}
