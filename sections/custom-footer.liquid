<footer class="bg-black text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 lg:py-10">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-12">

      <!-- CUSTOMER CARE -->
      <div>
        <h3 class="text-sm font-bold tracking-wider text-white uppercase mb-4">Customer Care</h3>
        <ul class="space-y-0">
          {% if section.settings.contact_url != blank %}
            <li class="border-b border-gray-600 py-3 first:pt-0">
              <a href="{{ section.settings.contact_url }}" class="text-gray-300 hover:text-white transition-colors text-sm uppercase tracking-wide">
                Contact Us
              </a>
            </li>
          {% endif %}
          {% if section.settings.refunds_url != blank %}
            <li class="border-b border-gray-600 py-3">
              <a href="{{ section.settings.refunds_url }}" class="text-gray-300 hover:text-white transition-colors text-sm uppercase tracking-wide">
                Refunds
              </a>
            </li>
          {% endif %}
          {% if section.settings.contact_url == blank and section.settings.refunds_url == blank %}
            <li class="border-b border-gray-600 py-3 first:pt-0">
              <a href="{{ routes.root_url }}" class="text-gray-300 hover:text-white transition-colors text-sm uppercase tracking-wide">
                Contact Us
              </a>
            </li>
          {% endif %}
        </ul>
      </div>

      <!-- BRAND -->
      <div>
        <h3 class="text-sm font-bold tracking-wider text-white uppercase mb-4">Brand</h3>
        <ul class="space-y-0">
          {% if section.settings.privacy_policy_url != blank %}
            <li class="border-b border-gray-600 py-3 first:pt-0">
              <a href="{{ section.settings.privacy_policy_url }}" class="text-gray-300 hover:text-white transition-colors text-sm uppercase tracking-wide">
                Privacy Policy
              </a>
            </li>
          {% endif %}
          {% if section.settings.terms_url != blank %}
            <li class="border-b border-gray-600 py-3">
              <a href="{{ section.settings.terms_url }}" class="text-gray-300 hover:text-white transition-colors text-sm uppercase tracking-wide">
                Terms of Service
              </a>
            </li>
          {% endif %}
          {% if shop.privacy_policy != blank and section.settings.privacy_policy_url == blank %}
            <li class="border-b border-gray-600 py-3 first:pt-0">
              <a href="{{ shop.privacy_policy.url }}" class="text-gray-300 hover:text-white transition-colors text-sm uppercase tracking-wide">
                Privacy Policy
              </a>
            </li>
          {% endif %}
          {% if shop.terms_of_service != blank and section.settings.terms_url == blank %}
            <li class="border-b border-gray-600 py-3">
              <a href="{{ shop.terms_of_service.url }}" class="text-gray-300 hover:text-white transition-colors text-sm uppercase tracking-wide">
                Terms of Service
              </a>
            </li>
          {% endif %}
        </ul>
      </div>

      <!-- SOCIALS -->
      <div>
        <h3 class="text-sm font-bold tracking-wider text-white uppercase mb-4">Socials</h3>
        <ul class="flex flex-row flex-wrap gap-4">
          {% if section.settings.instagram_url != blank %}
            <li>
              <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener noreferrer" aria-label="Instagram" class="inline-block text-gray-300 hover:text-white transition-colors">
                <svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              </a>
            </li>
          {% endif %}
          {% if section.settings.tiktok_url != blank %}
            <li>
              <a href="{{ section.settings.tiktok_url }}" target="_blank" rel="noopener noreferrer" aria-label="TikTok" class="inline-block text-gray-300 hover:text-white transition-colors">
                <svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-2.88 2.5 2.89 2.89 0 01-2.89-2.89 2.89 2.89 0 012.89-2.89c.28 0 .54.04.79.1V9.01a6.31 6.31 0 00-.79-.05 6.34 6.34 0 00-6.34 6.34 6.34 6.34 0 006.34 6.34 6.34 6.34 0 006.33-6.34V8.69a8.18 8.18 0 004.78 1.52V6.75a4.85 4.85 0 01-1.01-.06z"/>
                </svg>
              </a>
            </li>
          {% endif %}
          {% if section.settings.facebook_url != blank %}
            <li>
              <a href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener noreferrer" aria-label="Facebook" class="inline-block text-gray-300 hover:text-white transition-colors">
                <svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
            </li>
          {% endif %}
        </ul>
      </div>

    </div>

    <!-- Copyright -->
    <div class="mt-8 pt-6 border-t border-gray-700 text-center text-xs text-gray-500">
      &copy; {{ 'now' | date: '%Y' }}, {{ shop.name }}. Powered by Shopify
    </div>
  </div>
</footer>

