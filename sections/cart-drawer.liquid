<div id="cart-drawer" class="cart-drawer-wrapper" aria-hidden="true" role="dialog" aria-label="Cart">
  <!-- Backdrop -->
  <div id="cart-drawer-backdrop" class="cart-drawer-backdrop fixed inset-0 z-40 bg-black/40 opacity-0 pointer-events-none transition-opacity duration-300 ease-out" aria-hidden="true"></div>

  <!-- Panel: half screen, glass, slide from left -->
  <div id="cart-drawer-panel" class="cart-drawer-panel fixed top-0 left-0 h-full w-1/2 max-w-xl z-50 flex flex-col transform -translate-x-full transition-transform duration-300 ease-out shadow-2xl" style="background-color: rgba(255, 255, 255, 0.75); backdrop-filter: blur(20px) saturate(180%); -webkit-backdrop-filter: blur(20px) saturate(180%); border-right: 1px solid rgba(255, 255, 255, 0.2);">
    <div id="cart-drawer-content" class="flex flex-col h-full overflow-hidden">
      <!-- Header -->
      <div class="flex items-center justify-between p-4 border-b border-gray-200/80 shrink-0">
        <h2 class="text-xl font-bold text-gray-900">{{ section.settings.heading | default: 'Your cart' }}</h2>
        <button type="button" id="cart-drawer-close" class="p-2 text-gray-600 hover:text-gray-900 hover:bg-gray-200/50 rounded-lg transition-colors" aria-label="Close cart">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <!-- Content -->
      <div class="flex-1 overflow-y-auto p-4">
        {% if cart.item_count > 0 %}
          <ul class="space-y-4">
            {% for item in cart.items %}
              <li class="flex gap-4 py-3 border-b border-gray-200/80 last:border-0">
                <a href="{{ item.url }}" class="shrink-0 w-20 h-20 rounded-lg overflow-hidden bg-gray-100">
                  {% if item.image %}
                    <img src="{{ item.image | image_url: width: 160, height: 160 }}" alt="{{ item.title | escape }}" width="80" height="80" class="w-full h-full object-cover">
                  {% else %}
                    {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
                  {% endif %}
                </a>
                <div class="flex-1 min-w-0">
                  <a href="{{ item.url }}" class="font-medium text-gray-900 hover:text-gray-600 line-clamp-2">{{ item.product.title }}</a>
                  {% if item.variant.title != 'Default Title' %}
                    <p class="text-sm text-gray-500 mt-0.5">{{ item.variant.title }}</p>
                  {% endif %}
                  <div class="flex items-center justify-between mt-2">
                    <span class="text-sm font-medium text-gray-900">{{ item.line_price | money }}</span>
                    <span class="text-sm text-gray-500">Qty {{ item.quantity }}</span>
                  </div>
                  <a href="{{ routes.cart_change_url }}?line={{ forloop.index }}&quantity=0" class="text-sm font-medium text-red-600 hover:text-red-700 mt-1 inline-block">Remove</a>
                </div>
              </li>
            {% endfor %}
          </ul>
        {% else %}
          <div class="flex flex-col items-center justify-center py-12 text-center">
            <p class="text-lg text-gray-600 mb-4">Your cart is empty</p>
            <button type="button" class="cart-drawer-close-trigger text-gray-900 font-medium underline hover:no-underline">Continue shopping</button>
          </div>
        {% endif %}
      </div>

      {% if cart.item_count > 0 %}
        <!-- Footer: subtotal + actions -->
        <div class="p-4 border-t border-gray-200/80 shrink-0 space-y-3">
          <div class="flex justify-between items-center text-lg font-semibold text-gray-900">
            <span>Subtotal</span>
            <span>{{ cart.total_price | money }}</span>
          </div>
          <p class="text-xs text-gray-500">Taxes and shipping calculated at checkout.</p>
          <div class="flex flex-col gap-2">
            <a href="{{ routes.root_url }}" class="block w-full py-3 text-center text-gray-700 font-medium hover:underline">Continue shopping</a>
            <form action="{{ routes.cart_url }}" method="post">
              <button type="submit" name="checkout" class="w-full py-3 bg-gray-900 text-white font-semibold rounded-lg hover:bg-gray-800 transition-colors">Checkout</button>
            </form>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<script>
(function() {
  function openDrawer() {
    var w = document.getElementById('cart-drawer');
    var b = document.getElementById('cart-drawer-backdrop');
    var p = document.getElementById('cart-drawer-panel');
    if (!w || !b || !p) return;
    w.classList.add('cart-drawer-open');
    w.setAttribute('aria-hidden', 'false');
    b.style.opacity = '1';
    b.style.pointerEvents = 'auto';
    p.style.transform = 'translateX(0)';
    document.body.style.overflow = 'hidden';
  }

  function closeDrawer() {
    var w = document.getElementById('cart-drawer');
    var b = document.getElementById('cart-drawer-backdrop');
    var p = document.getElementById('cart-drawer-panel');
    if (!w || !b || !p) return;
    w.classList.remove('cart-drawer-open');
    w.setAttribute('aria-hidden', 'true');
    b.style.opacity = '0';
    b.style.pointerEvents = 'none';
    p.style.transform = 'translateX(-100%)';
    document.body.style.overflow = '';
  }

  window.openCartDrawer = openDrawer;
  window.closeCartDrawer = closeDrawer;

  document.addEventListener('DOMContentLoaded', function() {
    var closeBtn = document.getElementById('cart-drawer-close');
    var backdrop = document.getElementById('cart-drawer-backdrop');
    var cartToggle = document.querySelector('[data-cart-drawer-toggle]');

    if (closeBtn) {
      closeBtn.addEventListener('click', function() { closeDrawer(); });
    }
    if (backdrop) {
      backdrop.addEventListener('click', function() { closeDrawer(); });
    }
    document.querySelectorAll('.cart-drawer-close-trigger').forEach(function(el) {
      el.addEventListener('click', function() { closeDrawer(); });
    });
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') closeDrawer();
    });
    if (cartToggle) {
      cartToggle.addEventListener('click', function(e) {
        e.preventDefault();
        openDrawer();
      });
    }
    if (window.location.search.indexOf('open_cart=1') !== -1) {
      openDrawer();
      try {
        var u = new URL(window.location.href);
        u.searchParams.delete('open_cart');
        window.history.replaceState({}, '', u.pathname + (u.search || '') + u.hash);
      } catch (err) {}
    }
  });
})();
</script>

{% schema %}
{
  "name": "Cart drawer",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your cart"
    }
  ]
}
{% endschema %}
