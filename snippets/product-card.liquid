<div class="shrink-0 w-56 max-w-full">
  <div class="border border-gray-200 bg-white shadow-md rounded-lg overflow-hidden h-full flex flex-col">
    <a href="{{ product_product.url }}" class="block flex-1">
      <div class="aspect-square overflow-hidden bg-gray-100">
        {% if product_product.featured_image %}
          <img 
            src="{{ product_product.featured_image | image_url: width: 500, height: 500 }}" 
            alt="{{ product_product.featured_image.alt | escape }}" 
            width="500"
            height="500"
            class="w-full h-full object-cover"
          >
        {% else %}
          {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
        {% endif %}
      </div>
      
      <div class="flex flex-col items-center text-center p-4 space-y-2">
        <h3 class="font-bold text-gray-900 text-base">{{ product_product.title }}</h3>
        
        <div class="flex items-center justify-center gap-2">
          {% if product_product.compare_at_price > product_product.price %}
            <span class="font-bold text-black">{{ product_product.price | money }}</span>
            <span class="text-gray-500 line-through text-sm">{{ product_product.compare_at_price | money }}</span>
          {% else %}
            <span class="font-bold text-black">{{ product_product.price | money }}</span>
          {% endif %}
        </div>
      </div>
    </a>
    
    <div class="p-4 pt-0">
      {% if product_product.available %}
        <button type="button" class="add-to-cart-btn w-full py-3 bg-black text-white font-bold rounded-lg hover:bg-gray-800 transition-colors" data-variant-id="{{ product_product.selected_or_first_available_variant.id }}">
          Add to cart
        </button>
      {% else %}
        <button disabled class="w-full py-3 bg-gray-400 text-white font-bold rounded-lg cursor-not-allowed">
          Sold out
        </button>
      {% endif %}
    </div>
  </div>
</div>
