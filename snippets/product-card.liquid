<div class="group relative">
  <a href="{{ product_product.url }}" class="block">
    <div class="relative overflow-hidden bg-gray-100 rounded-lg aspect-square mb-4">
      {% if product_product.featured_image %}
        <img 
          src="{{ product_product.featured_image | image_url: width: 500, height: 500 }}" 
          alt="{{ product_product.featured_image.alt | escape }}" 
          width="500"
          height="500"
          class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
        >
      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
      {% endif %}
    </div>
    
    <div class="space-y-1">
      <h3 class="text-gray-900 font-medium text-base group-hover:text-gray-600 transition-colors">
        {{ product_product.title }}
      </h3>
      <p class="text-gray-900 font-semibold">
        {{ product_product.price | money }}
        {% if product_product.compare_at_price > product_product.price %}
          <span class="text-gray-500 line-through ml-2">{{ product_product.compare_at_price | money }}</span>
        {% endif %}
      </p>
      {% unless product_product.available %}
        <span class="text-red-900 font-semibold text-sm uppercase tracking-wide">Sold Out</span>
      {% endunless %}
    </div>
  </a>
</div>
